.role {
  width: 200rpx;
  height: 40rpx;
}
.role .role-name {
    float: left;
    margin: 4rpx 20rpx 20rpx 0;
}
.role image {
    float: left;
    width: 40rpx;
    height: 40rpx;
    margin-top: 4rpx;
}
.aside-box {
  position: fixed;
  top: 100rpx;
  left: 40rpx;
  width: 200rpx;
  height: 240rpx;
  border: 1px solid #333;
  z-index: 3;
  background: #fff;
}
.aside-box view {
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

