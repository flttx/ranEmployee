.box .member-info, .box .car-info .car-info-line .car-info-item, .box .product-info .desc, .service-item text {
  font-size: 28rpx;
}
.header, .box .car-no {
  height: 80rpx;
  line-height: 80rpx;
}
.box, .bottom .bottom-btn {
  border-radius: 12rpx;
}
.header {
  text-align: center;
  margin-top: 20rpx;
}
.order-info, .settlement-info {
  width: 84%;
  margin: 20rpx 8%;
}
.box {
  border: 2rpx solid #333;
  padding: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.box .car-title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
}
.box .car-title .coupon {
      float: right;
}
.box .car-no {
    text-align: center;
    font-size: 56rpx;
}
.box .member-info {
    display: block;
    text-align: right;
    height: 40rpx;
    line-height: 40rpx;
}
.box .car-info {
    margin: 0 40rpx;
}
.box .car-info .car-info-line {
      height: 60rpx;
      line-height: 60rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      margin-bottom: 40rpx;
}
.box .car-info .car-info-line .car-info-item {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
            -ms-flex: 1;
                flex: 1;
}
.box .car-info .car-info-line .car-info-item image {
          width: 40rpx;
          height: 40rpx;
          vertical-align: top;
          margin-top: 8rpx;
}
.box .car-info .car-info-line .car-info-item .car-color {
          padding: 4rpx 60rpx;
          background: #000;
}
.box .car-info .remark {
      font-size: 28rpx;
      margin-bottom: 20rpx;
}
.box .product-info {
    width: 50%;
    padding: 10rpx;
}
.box .product-info text {
      display: block;
}
.box .product-num {
    position: absolute;
    top: calc(50% - 24rpx);
    left: 50%;
    color: #999;
}
.box .right {
    right: 40rpx;
}
.box-title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
@media screen and (max-width: 320px) {
.car-info {
    margin: 0 20rpx;
}
.car-color {
    padding: 4rpx 40rpx;
}
}
.service-item {
  position: relative;
  padding: 20rpx 0;
}
.service-item text {
    display: block;
}
.service-item:not(:first-child) {
  border-top: 2rpx solid #666;
}
.service-item-price {
  position: absolute;
  right: 0;
  top: calc(50% - 40rpx);
}
.service-item-price text {
    font-size: 32rpx;
    display: block;
    line-height: 44rpx;
}
.tip {
  height: 120rpx;
  line-height: 120rpx;
  border: 2rpx solid #333;
  text-align: center;
  margin-bottom: 20rpx;
}
.pay-sum {
  text-align: right;
}
.settlement-info .service-item-price {
  top: calc(50% - 20rpx);
}
.bottom {
  height: 80rpx;
}
.bottom .bottom-btn {
    float: right;
    margin-right: 40rpx;
    width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid #333;
}
.grey {
  color: #999;
}
.red {
  color: red;
}
.line-through {
  text-decoration: line-through;
}

