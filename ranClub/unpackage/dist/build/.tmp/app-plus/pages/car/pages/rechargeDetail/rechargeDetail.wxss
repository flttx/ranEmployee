.input-row, .item-box .item, .select-pay, .pay-way, .remark-box textarea, .btn-box button {
  border-radius: 12rpx;
}
.input-row label, .input-row input, .balance, .select-pay input, .pay-way, .btn-box button {
  height: 80rpx;
  line-height: 80rpx;
}
.form {
  width: 80%;
  margin: 20rpx 10%;
}
.input-row {
  margin-top: 40rpx;
  border: 2rpx solid;
  height: 80rpx;
}
.input-row label {
    float: left;
    width: 140rpx;
    padding-right: 0;
    padding-left: 20rpx;
}
.input-row input {
    float: left;
    width: calc(100% - 180rpx);
    padding-right: 20rpx;
}
.memberLevel {
  width: 360rpx !important;
  display: inline-block;
}
.balance {
  float: right;
  margin-top: 40rpx;
  width: calc(100% - 390rpx);
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #999;
}
@media screen and (max-width: 320px) {
.memberLevel {
    width: 65% !important;
}
.balance {
    width: 30%;
}
.input-row label {
    width: 190rpx;
}
.input-row input {
    width: calc(100% - 210rpx);
    padding-right: 0;
}
}
.item-box {
  width: 80%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 40rpx 10% 0 10%;
}
.item-box .item {
    height: 120rpx;
    border: 2rpx solid #333;
}
.item-box .item text {
      display: block;
      height: 60rpx;
      text-align: center;
}
.item-box .item text:first-child {
      line-height: 70rpx;
}
.item-box .item text:last-child {
      line-height: 50rpx;
}
.item-box .yearCard {
    width: 60%;
}
.item-box .money {
    width: 40%;
}
.item-box .money .discount {
      font-size: 28rpx;
      color: #999;
}
.input-box {
  width: 100%;
  margin-top: 40rpx;
  height: 60rpx;
  position: relative;
}
.input-box image {
    float: right;
    width: 60rpx;
    height: 60rpx;
}
.input-box input {
    float: right;
    width: 200rpx;
    border-bottom: 2rpx solid #333;
    height: 60rpx;
    line-height: 60rpx;
}
.input-box text {
    position: absolute;
    bottom: 0;
    right: 260rpx;
}
.select-pay {
  width: 100%;
  margin-top: 40rpx;
  border: 2rpx solid #333;
}
.select-pay input {
    width: 100%;
    background: transparent;
    border: none;
    text-align: center;
}
.select-pay:hover {
  background: #ebebe4;
}
.pay-box {
  width: 70%;
  position: fixed;
  top: 440rpx;
  left: 10%;
  border: 2rpx solid #333;
  background: #fff;
  height: 600rpx;
  padding: 40rpx;
  z-index: 3;
}
.pay-box ._p {
    font-size: 32rpx;
    color: #000;
    margin-top: 20rpx;
}
.pay-box .pay-way-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-top: 40rpx;
}
.pay-way {
  width: 200rpx;
  text-align: center;
  border: 2rpx solid #333;
}
.remark-box {
  margin-top: 40rpx;
  height: 120rpx;
}
.remark-box .text {
    float: left;
    width: 120rpx;
    height: 120rpx;
}
.remark-box textarea {
    float: left;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    width: calc(100% - 140rpx);
    border: 2rpx solid #333;
    background: transparent;
    height: 120rpx;
    padding: 10rpx;
}
.btn-box {
  width: 100%;
  margin: 40rpx 0 0 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.btn-box button {
    width: 40%;
    border: 2rpx solid #333;
    margin: 0;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 2;
}

