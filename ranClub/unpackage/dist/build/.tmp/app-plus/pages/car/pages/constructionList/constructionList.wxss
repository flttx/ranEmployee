.search .uni-icon-search, .search input {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 44rpx);
  padding-top: 40rpx;
}
.search {
  width: 80%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.scroll-wrapper {
  top: 120rpx;
  margin-bottom: 20rpx;
}
.scroll-wrapper .orderList {
    width: 90%;
    margin: 20rpx 5%;
}
.scroll-wrapper .orderList .li {
      padding: 20rpx 40rpx;
      border-bottom: 2rpx solid #666;
      position: relative;
}
.scroll-wrapper .orderList .li .construction-date {
        display: block;
        width: 70%;
        color: #999;
        font-size: 14px;
}
.scroll-wrapper .orderList .li .car-no {
        width: 70%;
        height: 60rpx;
        font-size: 36rpx;
        line-height: 60rpx;
}
.scroll-wrapper .orderList .li .construction-status {
        color: green;
        position: absolute;
        right: 20px;
        top: calc(50% - 10px);
}
.scroll-wrapper .orderList .li .construction-item {
        display: block;
        width: 70%;
        color: #999;
        font-size: 14px;
}

