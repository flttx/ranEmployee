.content {
  height: 100%;
  overflow: hidden;
}
.header {
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #999;
}
.header .text {
    display: inline-block;
    width: 200rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 40rpx;
    vertical-align: top;
}
.header .sum {
    display: inline-block;
    width: calc(100% - 240rpx);
    height: 120rpx;
}
.header .sum ._p {
      height: 50%;
}
.header .sum ._p text {
        float: left;
        width: 50%;
}
.tabs {
  width: 80%;
  margin: 40rpx 10%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.tabs .tabs-item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    position: relative;
    font-size: 32rpx;
}
.tabs .tabs-item .bar {
      display: inline-block;
      width: 100rpx;
      height: 4rpx;
      background: #666;
      position: absolute;
      right: 0;
      bottom: 0;
      left: 0;
      margin: 0 auto;
}
swiper {
  height: calc(100% - 80rpx);
}
.cash-flow {
  padding-bottom: 60rpx;
}
.title {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 44rpx;
}
.detail {
  width: 84%;
  margin: 0 8%;
  padding: 20rpx 0;
}
.detail text {
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}
.detail text .amount {
      float: right;
}
.detail .item {
    font-size: 28rpx;
    padding-left: 20rpx;
}
.detail .total {
    font-size: 32rpx;
}
.detail:not(:last-child) {
  border-bottom: 2rpx solid #999;
}

