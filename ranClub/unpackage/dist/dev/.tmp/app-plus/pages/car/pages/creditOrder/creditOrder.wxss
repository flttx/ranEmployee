.search .uni-icon-search, .search input {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 44rpx);
  padding-top: 40rpx;
}
.search {
  width: 80%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.scroll-wrapper {
  top: 120rpx;
  margin-bottom: 20rpx;
}
.scroll-wrapper .orderList {
    width: 90%;
    margin: 20rpx 5%;
}
.scroll-wrapper .orderList .li {
      padding: 20rpx 40rpx;
      border-bottom: 2rpx solid #666;
      position: relative;
}
.scroll-wrapper .orderList .li .icon {
        display: inline-block;
        height: 100%;
        width: 80rpx;
        margin-left: -40rpx;
}
.scroll-wrapper .orderList .li .icon .uni-icon {
          position: absolute;
          top: 50%;
          font-size: 40rpx;
          border: 2rpx solid;
          border-radius: 50%;
}
.scroll-wrapper .orderList .li .order-info {
        display: inline-block;
        width: 70%;
}
.scroll-wrapper .orderList .li .order-info .order-status {
          display: block;
          width: 100rpx;
          height: 48rpx;
          line-height: 48rpx;
          font-size: 24rpx;
          color: #fff;
          text-align: center;
          background: green;
          border-radius: 12rpx;
}
.scroll-wrapper .orderList .li .order-info .car-no {
          width: 70%;
          height: 60rpx;
          font-size: 36rpx;
          line-height: 60rpx;
}
.scroll-wrapper .orderList .li .order-info .order-date {
          display: block;
          width: 70%;
          color: #999;
          font-size: 28rpx;
}
.scroll-wrapper .orderList .li .order-info .order-item {
          width: 70%;
}
.scroll-wrapper .orderList .li .order-info .order-item text {
            display: block;
            color: #999;
            font-size: 28rpx;
}
.scroll-wrapper .orderList .li .order-info .order-money {
          position: absolute;
          right: 40rpx;
          top: calc(50% - 20rpx);
}
.scroll-wrapper .orderList .li .order-info .order-money text {
            display: block;
}
.scroll-wrapper .orderList .li .order-info .order-money .pay-money {
            color: green;
}
.scroll-wrapper .orderList .li .order-info .order-money .credit-money {
            color: red;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: calc(100% - 80rpx);
  height: 120rpx;
  border-top: 2rpx solid #333;
  padding: 20rpx 40rpx;
}
.bottom radio-group {
    float: left;
    width: 140rpx;
}
.bottom .btn {
    float: right;
    width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: green;
    color: #fff;
    border-radius: 12rpx;
    margin-top: 10rpx;
}
.bottom .sum-money {
    max-width: calc(100% - 80rpx - 320rpx);
    float: right;
    margin-right: 40rpx;
    font-size: 28rpx;
}
.bottom .sum-money > text {
    display: block;
}

