            justify-content: space-between;
}
.form .btn-row button {
      width: 200rpx;
      text-align: center;
      border: 2rpx solid;
      border-radius: 12rpx;
      font-size: 28rpx;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.role-box {
  width: 80%;
  height: 520rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  border: 2rpx solid;
  position: absolute;
  top: calc(50% - 280rpx);
  left: 10%;
  background: #fff;
  z-index: 3;
}
.role-box view {
    height: 80rpx;
    margin-bottom: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
