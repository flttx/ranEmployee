.form .input-row, .form .input-row input, .form .input-row .select-btn, .form .btn-row button, .role-box view text {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  overflow: hidden;
  height: 100%;
}
.form {
  width: 80%;
  position: absolute;
  top: calc(50% - 360rpx);
  left: 10%;
}
.form .input-row {
    margin: 40rpx 80rpx 0;
}
.form .input-row label {
      float: left;
      width: 120rpx;
      text-align: right;
}
.form .input-row input, .form .input-row .select-btn {
      float: left;
      width: calc(100% - 150rpx);
      border: 2rpx solid;
      margin-left: 10rpx;
}
.form .input-row input {
      padding: 0 20rpx;
}
.form .input-row .select-btn {
      border-radius: 12rpx;
      text-align: center;
}
.form .btn-row {
    margin-top: 80rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
