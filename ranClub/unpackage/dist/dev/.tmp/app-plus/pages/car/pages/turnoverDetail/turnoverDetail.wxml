<view class="content" bind:__l="__l"><view class="header"><text class="uni-icon uni-icon-arrowthindown"></text><text class="uni-icon uni-icon-arrowthinup"></text><view data-event-opts="{{[['tap',[['pickerDate',['$event']]]]]}}" class="date-picker" bindtap="__e"><view class="date-value">{{"下单时间: "+date}}</view></view></view><view class="tabs"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><text class="tabs-item" data-index="{{index}}" data-event-opts="{{[['tap',[['changeTab',['$event']]]]]}}" bindtap="__e">{{''+tab.value+''}}<block wx:if="{{index==currentIndex}}"><text class="bar"></text></block></text></block></view><swiper current="{{currentIndex}}" data-event-opts="{{[['change',[['changeSwiper',['$event']]]]]}}" bindchange="__e"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="tabIndex" wx:key="tabIndex"><swiper-item><scroll-view style="height:100%;" scroll-y><block wx:for="{{tab.data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toOrderDetail',['$event']]]]]}}" class="li" bindtap="__e"><view class="main-info"><view class="order-no">{{item.order_no}}</view><view class="order-user">{{item.user+" "+item.mobile}}</view><view class="order-price">{{item.price+"元"}}</view></view><view class="other-info"><text class="car-no">{{currentIndex==0?item.car_no:item.remark}}</text><text class="worker">{{(currentIndex==0?'开单':currentIndex==1?'充值':'操作')+"人："+item.worker}}</text></view></view></block></scroll-view></swiper-item></block></swiper></view>