.search .uni-icon-search, .search input, .date-btn {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 40rpx);
  padding-top: 40rpx;
}
.search {
  width: 80%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.date-btn {
  display: inline-block;
  position: absolute;
  right: 10%;
  top: 20px;
  font-size: 32rpx;
}
.scroll-wrapper {
  margin-bottom: 20rpx;
}
.scroll-wrapper .orderList {
    width: 90%;
    margin: 20rpx 5%;
}
.scroll-wrapper .orderList .li {
      padding: 20rpx 40rpx;
      border-bottom: 2rpx solid #666;
      position: relative;
      line-height: 1.4;
}
.scroll-wrapper .orderList .li .order-status {
        display: block;
        width: 100rpx;
        height: 48rpx;
        line-height: 48rpx;
        font-size: 24rpx;
        color: #fff;
        text-align: center;
        background: green;
        border-radius: 12rpx;
}
.scroll-wrapper .orderList .li .car-no {
        width: 70%;
        height: 60rpx;
        font-size: 36rpx;
        line-height: 60rpx;
}
.scroll-wrapper .orderList .li .order-date {
        display: block;
        width: 70%;
        color: #999;
        font-size: 28rpx;
}
.scroll-wrapper .orderList .li .order-item {
        width: 70%;
}
.scroll-wrapper .orderList .li .order-item text {
          display: block;
          color: #999;
          font-size: 28rpx;
}
.scroll-wrapper .orderList .li .order-money {
        color: red;
        position: absolute;
        right: 40rpx;
        top: calc(50% - 20rpx);
}

