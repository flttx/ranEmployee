.header .date-picker, .tabs .tabs-item {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 40rpx);
  padding: 40rpx 40rpx 0;
}
.header {
  height: 80rpx;
}
.header .date-picker {
    padding-left: 10rpx;
    float: right;
    width: 320rpx;
    border: 2rpx solid;
    margin-right: 20rpx;
}
.header .date-picker picker {
      width: 95%;
}
.header .uni-icon {
    float: right;
    font-size: 44rpx;
    margin-top: 20rpx;
}
.tabs {
  margin-top: 40rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 32rpx;
}
.tabs .tabs-item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    text-align: center;
    position: relative;
}
.tabs .tabs-item .bar {
      width: 100rpx;
      height: 2rpx;
      background: #333;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: 0 auto;
}
swiper {
  height: calc(100% - 250rpx);
}
.li {
  padding: 20rpx;
  border-bottom: 2rpx solid;
}
.li .main-info {
    height: 80rpx;
    position: relative;
    font-size: 32rpx;
}
.li .main-info view {
      height: 40rpx;
      line-height: 40rpx;
}
.li .main-info .order-price {
      position: absolute;
      top: calc(50% - 20rpx);
      right: 0;
      color: green;
}
.li .other-info {
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
}
.li .other-info .car-no {
      float: left;
      width: 60%;
}
.li .other-info .worker {
      float: right;
      text-align: right;
      width: 40%;
}

