.content {
  padding: 60rpx;
  font-size: 32rpx;
}
.info {
  border: 2rpx solid;
  border-radius: 12rpx;
  padding: 0 20rpx;
}
.info .change {
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid;
    border-radius: 12rpx;
    float: right;
    margin-top: 8rpx;
}
.info .info-content {
    width: calc(100% - 130rpx);
}
.basic-info .info:not(:first-child) {
  margin-top: 40rpx;
}
.center-line {
  text-align: right;
}
.center-line .btn {
    margin-left: 20rpx;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.change-box {
  width: 80%;
  padding: 40rpx;
  background: #fff;
  border: 2rpx solid;
  background: #fff;
  z-index: 3;
  position: fixed;
  top: 30%;
  left: 10%;
}
.change-box .form {
    width: 80%;
    margin: auto;
}
.change-box .form .input-row {
      margin-bottom: 20rpx;
}
.change-box .form .input-row label {
        float: left;
        width: 100rpx;
}
.change-box .form .input-row input {
        float: left;
        width: calc(100% - 160rpx);
        border: 2rpx solid;
        border-radius: 12rpx;
        padding: 0 10rpx;
}
.change-box .form .input-row .unit {
        width: 60rpx;
        text-align: right;
}
.change-box .form input {
      border: 2rpx solid;
      border-radius: 12rpx;
      padding: 0 10rpx;
}
.change-box .form .btn-row {
      margin-top: 40rpx;
}
.change-box .form .btn-row button {
        float: right;
        width: 180rpx;
        border: 2rpx solid;
        border-radius: 12rpx;
}
.change-box .form .select-row {
      margin-bottom: 20rpx;
}
.change-box .form .select-row label {
        float: left;
        width: 100rpx;
        text-align: right;
}
.change-box .form .select-row .select {
        float: left;
        width: calc(100% - 100rpx);
        border: 2rpx solid;
        padding: 0 20rpx;
}
.change-box .form .select-row .select .uni-icon {
          float: right;
}
.change-box .form .select-row input {
        float: left;
        width: 200rpx;
        border: 2rpx solid;
        padding: 0 20rpx;
        border-radius: 0;
}
