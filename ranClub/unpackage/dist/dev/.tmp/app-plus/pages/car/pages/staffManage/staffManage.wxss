.content {
  height: 100%;
  padding-top: 40rpx;
  overflow: hidden;
}
.search {
  width: 80%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.role-line {
  width: 80%;
  margin: 40rpx 10%;
  font-size: 32rpx;
  height: 80rpx;
  position: relative;
}
.role-line view .role {
    width: 200rpx;
    border: 2rpx solid;
    padding-left: 20rpx;
}
.role-line view .role .uni-icon {
      float: right;
      height: 58rpx;
      line-height: 58rpx;
      border-left: 2rpx solid;
}
.role-line view .select {
    width: 200rpx;
    border: 2rpx solid;
    background: #fff;
    position: absolute;
    z-index: 3;
}
.role-line view .select text {
      display: block;
      padding-left: 20rpx;
}
.role-line .add-line {
    position: absolute;
    right: 0;
    top: 0;
}
.role-line .add-line image {
      float: right;
      width: 40rpx;
      height: 40rpx;
      margin-left: 10rpx;
      margin-top: 10rpx;
}
.row {
  font-size: 32rpx;
  width: 80%;
  margin: 10rpx 12% 10rpx 8%;
}
.row text {
    display: inline-block;
    text-align: center;
}
.row .name {
    width: 30%;
}
.row .phone {
    width: 40%;
    vertical-align: top;
}
.row .operation-line {
    float: right;
}
.row .operation-line .operation {
      width: 140rpx;
      border: 2rpx solid;
      margin-top: 15rpx;
      padding-left: 10rpx;
}
.row .operation-line .operation .uni-icon {
        float: right;
        height: 48rpx;
        line-height: 48rpx;
        border-left: 2rpx solid;
}
.row .operation-line .operation-select {
      width: 140rpx;
      border: 2rpx solid;
      background: #fff;
      position: absolute;
      z-index: 3;
}
.row .operation-line .operation-select text {
        display: block;
        padding-left: 10rpx;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.tip-box {
  width: 80%;
  position: absolute;
  top: 20%;
  left: 10%;
  border: 2rpx solid;
  background: #fff;
  padding: 40rpx 5%;
  font-size: 32rpx;
  z-index: 3;
}
.tip-box ._p {
    text-align: center;
    margin-bottom: 40rpx;
}
.tip-box .select-row {
    height: 80rpx;
    margin-bottom: 40rpx;
}
.tip-box .select-row label {
      float: left;
      width: 160rpx;
}
.tip-box .select-row view {
      float: left;
      width: calc(100% - 200rpx);
      position: relative;
      font-size: 28rpx;
}
.tip-box .select-row view .select-line {
        width: 100%;
        border: 2rpx solid;
        padding-left: 10rpx;
}
.tip-box .select-row view .select-line .uni-icon {
          float: right;
          height: 78rpx;
          line-height: 78rpx;
          border-left: 2rpx solid;
}
.tip-box .select-row view .select {
        position: absolute;
        top: 80rpx;
        width: 100%;
        border: 2rpx solid;
        background: #fff;
        z-index: 4;
}
.tip-box .select-row view .select text {
          display: block;
          padding-left: 20rpx;
}
.tip-box .tips {
    font-size: 28rpx;
    color: red;
}
.tip-box .btn-row {
    margin-tip: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
}
.tip-box .btn-row button {
      width: 200rpx;
      text-align: center;
      border: 2rpx solid;
      border-radius: 12rpx;
      font-size: 28rpx;
}
