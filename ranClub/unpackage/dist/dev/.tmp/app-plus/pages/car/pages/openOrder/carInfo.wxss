.row, .row input, .other-phone, .btn-box button, .bottom button, .add-box-btn button {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 60rpx);
  padding-top: 40rpx;
}
.content .form {
    width: 80%;
    margin: 0 10% 40rpx;
    height: calc(100% - 40rpx);
    position: relative;
}
.row {
  margin-top: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 40rpx;
  border: 2rpx solid #333;
  border-radius: 12rpx;
}
.row .label {
    color: #999;
}
.row input {
    float: right;
    width: calc(100% - 200rpx);
    border: none;
    background: transparent;
    margin-bottom: 0;
    padding: 0;
}
.row input.long {
    width: calc(100% - 120rpx);
}
.phone {
  float: left;
  width: 70%;
}
.other-phone {
  margin-top: 20rpx;
  float: right;
  width: calc(30% - 20rpx);
  background: #000;
  border-radius: 12rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}
.car-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  margin-top: 20rpx;
}
.car-type radio-group .radio {
    width: 140rpx;
    margin: 0 calc((100% - 420rpx)/6);
}
.textarea-box {
  height: 200rpx;
  border: 2rpx solid #333;
  border-radius: 12rpx;
}
.textarea-box label {
    float: left;
    width: 140rpx;
    height: 200rpx;
    line-height: 200rpx;
    color: #999;
    padding-left: 20rpx;
}
.textarea-box textarea {
    float: left;
    width: calc(100% - 180rpx);
    height: 90%;
    padding: 10rpx;
    border: none;
    background: transparent;
    margin-bottom: 0;
    overflow-x: hidden;
}
.btn-box, .add-box-btn {
  margin-top: 20rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.btn-box {
  width: 100%;
}
.btn-box button {
    width: 240rpx;
}
.bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
}
.bottom button {
    width: 100%;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 2;
}
.add-box, .color-box {
  position: absolute;
  left: 10%;
  top: calc(50% - 300rpx);
  width: 80%;
  height: 600rpx;
  border: 2rpx solid;
  padding: 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #fff;
  z-index: 3;
}
.add-box ._p, .color-box ._p {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}
.add-box-btn {
  margin-top: 20px;
}
.add-box-btn button {
    width: 200rpx;
}
input.short {
  width: calc(100% - 220rpx);
}
.color-box {
  height: auto;
}
.color-box view .color-item {
    display: inline-block;
    width: 25%;
    margin-bottom: 20rpx;
}
.color-box view .color-item text {
      display: block;
}
.color-box view .color-item .color-value {
      width: 100%;
      padding-top: 100%;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
}
.color-box view .color-item .color-text {
      width: 100%;
      height: 44rpx;
      line-height: 44rpx;
      text-align: center;
}
.color-box view .color-item:not(:nth-child(3n+1)) {
    margin-left: calc(20% / 2);
}
.black {
  background: black;
}
.white {
  background: white;
  border: 2rpx solid;
  padding-top: calc(100% - 4rpx) !important;
}
.red {
  background: red;
}
.yellow {
  background: yellow;
}
.grey {
  background: grey;
}
.brown {
  background: brown;
}

