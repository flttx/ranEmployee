.search .uni-icon-search, .search input, .statistics-btn, .type-box ._p, .type-box .type-list .li, .type-box .cancel-btn {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 44rpx);
  padding-top: 40rpx;
}
.search {
  width: calc(60% - 20rpx);
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.statistics-btn {
  display: inline-block;
  width: 20%;
  text-align: center;
  border: 2rpx solid;
  border-radius: 12rpx;
  position: absolute;
  right: 10%;
  top: 40rpx;
}
.scroll-wrapper {
  top: 120rpx;
  margin-bottom: 20rpx;
}
.scroll-wrapper .serviceList {
    width: 80%;
    margin: 20rpx 10% 140rpx;
}
.scroll-wrapper .serviceList .li {
      padding: 20rpx;
      border-bottom: 2rpx solid #666;
      position: relative;
}
.scroll-wrapper .serviceList .li .service-item-name, .scroll-wrapper .serviceList .li .service-item-time {
        display: block;
        width: 70%;
        height: 48rpx;
        line-height: 48rpx;
}
.scroll-wrapper .serviceList .li .service-item-name {
        font-size: 32rpx;
}
.scroll-wrapper .serviceList .li .service-item-time {
        font-size: 28rpx;
        color: #999;
}
.scroll-wrapper .serviceList .li .service-item-price {
        position: absolute;
        right: 20rpx;
        top: calc(50% - 20rpx);
}
.scroll-wrapper .serviceList .li.selected {
      background: #eee;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 2;
}
.type-box {
  width: 80%;
  padding: 20rpx 0 40rpx 0;
  position: absolute;
  top: calc(50% - 300rpx);
  left: 10%;
  border: 2rpx solid #333;
  background: #fff;
  z-index: 3;
}
.type-box ._p {
    text-align: center;
    font-size: 40rpx;
}
.type-box .type-list {
    width: 80%;
    margin: 0 10%;
}
.type-box .type-list .li {
      border-bottom: 2rpx solid #999;
}
.type-box .type-list .li .uni-icon {
        float: right;
        font-size: 40rpx;
        margin-top: 20rpx;
}
.type-box .cancel-btn {
    width: 200rpx;
    border-radius: 12rpx;
    background: #999;
    text-align: center;
    margin: 20rpx 0 0 calc(10%);
}
.footer {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 2;
}
.footer view {
    float: left;
    width: calc(100% - 240rpx);
    height: 120rpx;
    border-top: 2rpx solid #333;
    line-height: 120rpx;
    padding-left: 40rpx;
}
.footer .confirm {
    float: right;
    width: 200rpx;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    background: #999;
}

