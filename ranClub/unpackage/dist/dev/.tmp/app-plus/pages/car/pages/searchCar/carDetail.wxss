.box .car-no, .row, .row input, .other-phone {
  height: 80rpx;
  line-height: 80rpx;
}
.box .car-title {
  height: 60rpx;
  line-height: 60rpx;
}
.box .member-info {
  height: 40rpx;
  line-height: 40rpx;
}
.content {
  height: calc(100% - 50rpx);
  padding-top: 40rpx;
}
.content .form {
    width: 80%;
    margin: 0 10% 40rpx;
    height: calc(100% - 40rpx);
    position: relative;
}
.box {
  border: 2rpx solid #333;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}
.box .car-title {
    font-size: 32rpx;
}
.box .car-title .coupon {
      float: right;
}
.box .car-no {
    text-align: center;
    font-size: 56rpx;
}
.box .member-info {
    display: block;
    text-align: right;
    font-size: 28rpx;
}
.row {
  margin-top: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 40rpx;
  border: 2rpx solid #333;
  border-radius: 12rpx;
}
.row .label {
    color: #999;
}
.row input {
    float: right;
    width: calc(100% - 200rpx);
    border: none;
    background: transparent;
    margin-bottom: 0;
    padding: 0;
}
.row input.long {
    width: calc(100% - 120rpx);
}
.phone {
  float: left;
  width: 70%;
}
.other-phone {
  margin-top: 20rpx;
  float: right;
  width: calc(30% - 20rpx);
  background: #000;
  border-radius: 12rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}
.car-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  margin-top: 20rpx;
}
.car-type radio-group .radio {
    width: 140rpx;
    margin: 0 calc((100% - 420rpx)/6);
}
.textarea-box {
  height: 200rpx;
  border: 2rpx solid #333;
  border-radius: 12rpx;
}
.textarea-box label {
    float: left;
    width: 140rpx;
    height: 200rpx;
    line-height: 200rpx;
    color: #999;
    padding-left: 20rpx;
}
.textarea-box textarea {
    float: left;
    width: calc(100% - 180rpx);
    height: 90%;
    padding: 10rpx;
    border: none;
    background: transparent;
    margin-bottom: 0;
    overflow-x: hidden;
}
.consumeRecord {
  float: right;
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-bottom: 2rpx solid;
}

