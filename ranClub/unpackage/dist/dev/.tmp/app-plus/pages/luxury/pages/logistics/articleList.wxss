.header .date-picker, .scroll-wrapper .item .item-info .btn {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 40rpx);
  padding: 40rpx 40rpx 0;
  font-size: 32rpx;
}
.header {
  height: 80rpx;
}
.header .date-picker {
    padding-left: 10rpx;
    float: right;
    width: 320rpx;
    border: 2rpx solid;
    margin-right: 20rpx;
}
.header .date-picker picker {
      width: 95%;
}
.header .uni-icon {
    float: right;
    font-size: 44rpx;
    margin-top: 20rpx;
}
.scroll-wrapper {
  height: calc(100% - 100rpx);
  margin-top: 20rpx;
}
.scroll-wrapper .item {
    padding: 20rpx;
    border-bottom: 2rpx solid;
}
.scroll-wrapper .item .item-info {
      height: 160rpx;
      position: relative;
}
.scroll-wrapper .item .item-info image {
        float: left;
        width: 160rpx;
        height: 160rpx;
        border-radius: 12rpx;
}
.scroll-wrapper .item .item-info .item-desc {
        float: left;
        width: calc(100% - 180rpx);
        margin-left: 20rpx;
        heigth: 160rpx;
}
.scroll-wrapper .item .item-info .item-desc text {
          display: block;
          height: 60rpx;
          line-height: 60rpx;
}
.scroll-wrapper .item .item-info .btn {
        position: absolute;
        right: 0;
        bottom: 0;
        padding: 0 20rpx;
        border: 2rpx solid;
        border-radius: 12rpx;
}
.red {
  color: red;
