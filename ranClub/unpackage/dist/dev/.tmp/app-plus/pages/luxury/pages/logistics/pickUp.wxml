<view class="content" bind:__l="__l"><view class="search"><text class="uni-icon uni-icon-search"></text><input type="text" placeholder="用户名/手机号码"/></view><view class="tab"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><text class="tab-item" data-index="{{index}}" data-event-opts="{{[['tap',[['changeTab',['$event']]]]]}}" bindtap="__e">{{''+tab.name+''}}<block wx:if="{{currentIndex==index}}"><text class="bar"></text></block></text></block></view><swiper current="{{currentIndex}}" data-event-opts="{{[['change',[['changeSwiper',['$event']]]]]}}" bindchange="__e"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><swiper-item><scroll-view class="list" scroll-y><block wx:for="{{tab.data}}" wx:for-item="item" wx:for-index="itemIndex" wx:key="itemIndex"><view class="item"><view class="user-name">{{item.user_name}}</view><view class="item-info"><text>{{"联系方式："+item.mobile}}</text><text>{{"预计取件数量："+item.num+"件"}}</text><text>{{"地址："+item.address}}</text></view><view class="btn-box"><block wx:if="{{currentIndex==0}}"><button data-status="{{item.status}}" data-event-opts="{{[['tap',[['clickBtn',['$event']]]]]}}" bindtap="__e">{{"确认"+(item.status=="待接单"?"接单":"取件")}}</button></block><block wx:if="{{currentIndex==1}}"><button data-event-opts="{{[['tap',[['clickBtn',['$event']]]]]}}" bindtap="__e">已送至门店</button></block><block wx:if="{{currentIndex==0||currentIndex==2}}"><button>联系用户</button></block><block wx:if="{{currentIndex==1||currentIndex==2}}"><button>联系门店</button></block></view></view></block></scroll-view></swiper-item></block></swiper></view>