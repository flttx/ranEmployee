.search .uni-icon-search, .search input, .statistics-btn, .status-box text {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 44rpx);
  padding-top: 40rpx;
  font-size: 32rpx;
}
.search {
  width: 60%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
    font-size: 28rpx;
}
.statistics-btn {
  display: inline-block;
  position: absolute;
  right: 10%;
  top: 20px;
}
.scroll-wrapper {
  margin-top: 20rpx;
  height: calc(100% - 100rpx);
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 40rpx;
}
.scroll-wrapper .item {
    padding: 20rpx;
    border-bottom: 2rpx solid;
}
.scroll-wrapper .item .article-info {
      height: 160rpx;
      position: relative;
}
.scroll-wrapper .item .article-info image {
        float: left;
        width: 160rpx;
        height: 160rpx;
        border-radius: 12rpx;
}
.scroll-wrapper .item .article-info .article-desc {
        float: left;
        width: calc(100% - 180rpx);
        margin-left: 20rpx;
}
.scroll-wrapper .item .article-info .article-desc text {
          display: block;
          height: 60rpx;
          line-height: 60rpx;
}
.scroll-wrapper .item .article-info .view-btn {
        width: 80rpx;
        height: 80rpx;
        border: 2rpx solid;
        border-radius: 12rpx;
        position: absolute;
        right: 0;
        top: calc(50% - 40rpx);
        font-size: 32rpx;
        line-height: 40rpx;
        text-align: center;
}
.red {
  color: red;
}
.mask {
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}
.status-box {
  width: 80%;
  padding: 40rpx;
  background: #fff;
  border: 2rpx solid;
  position: fixed;
  top: 20%;
  left: 10%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  z-index: 3;
}
.status-box text {
    width: 40%;
    text-align: center;
    border: 2rpx solid;
    border-radius: 12rpx;
    margin-bottom: 40rpx;
}
.status-box text:nth-child(2n) {
    float: right;
}
.status-box text:nth-child(2n+1) {
    float: left;
}

