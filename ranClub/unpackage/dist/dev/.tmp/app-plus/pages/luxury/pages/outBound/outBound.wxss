.search .uni-icon-search, .search input {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 40rpx 40rpx 0;
  height: 100%;
  width: 100%;
}
.search {
  width: 70%;
  margin: 0 5%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.statistics-btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 10%;
  top: 50rpx;
}
.scroll-wrapper .item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid;
  position: relative;
}
.scroll-wrapper .item .item-info {
    height: 160rpx;
}
.scroll-wrapper .item .item-info .item-img {
      float: left;
      width: 160rpx;
      height: 160rpx;
      border-radius: 12rpx;
}
.scroll-wrapper .item .item-info .item-desc {
      float: left;
      margin-left: 20rpx;
      width: calc(100% - 180rpx);
      font-size: 32rpx;
}
.scroll-wrapper .item .item-info .item-desc view {
        height: 60rpx;
        line-height: 60rpx;
}
.scroll-wrapper .item .remark {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
}
.scroll-wrapper .item .view-btn {
    width: 80rpx;
    height: 80rpx;
    border: 2rpx solid;
    border-radius: 12rpx;
    position: absolute;
    right: 0;
    top: calc(50% - 40rpx);
    font-size: 32rpx;
    line-height: 40rpx;
    text-align: center;
}
.red {
  color: red;
