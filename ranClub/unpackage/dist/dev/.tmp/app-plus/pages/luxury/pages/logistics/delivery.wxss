.search .uni-icon-search, .search input, .tab .tab-item, swiper .list .item .item-info .btn {
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  height: calc(100% - 40rpx);
  padding-top: 40rpx;
}
.search {
  width: 80%;
  margin: 0 10%;
  height: 80rpx;
  border: 2rpx solid #333;
  border-radius: 60rpx;
}
.search .uni-icon-search {
    float: left;
    font-size: 48rpx;
    margin-left: 10rpx;
}
.search input {
    float: left;
    width: calc(100% - 70rpx);
    padding-left: 10rpx;
}
.tab {
  width: 90%;
  height: 80rpx;
  margin: 20rpx auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 32rpx;
}
.tab .tab-item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    text-align: center;
    position: relative;
}
.tab .tab-item .bar {
      width: 100rpx;
      height: 2rpx;
      background: #333;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: 0 auto;
}
swiper {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 100%;
  height: calc(100% - 200rpx);
  padding: 0 40rpx 20rpx;
}
swiper .list {
    height: 100%;
    font-size: 32rpx;
}
swiper .list .item {
      padding: 20rpx;
      border-bottom: 2rpx solid;
}
swiper .list .item .item-info {
        height: 160rpx;
        position: relative;
}
swiper .list .item .item-info image {
          float: left;
          width: 160rpx;
          height: 160rpx;
          border-radius: 12rpx;
}
swiper .list .item .item-info .item-desc {
          float: left;
          width: calc(100% - 180rpx);
          margin-left: 20rpx;
          heigth: 160rpx;
}
swiper .list .item .item-info .item-desc text {
            display: block;
            height: 60rpx;
            line-height: 60rpx;
}
swiper .list .item .item-info .btn {
          position: absolute;
          right: 0;
          bottom: 0;
          padding: 0 20rpx;
          border: 2rpx solid;
          border-radius: 12rpx;
}
