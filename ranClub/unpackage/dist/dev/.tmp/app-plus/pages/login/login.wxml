<view class="content" bind:__l="__l"><view class="logo"></view><view class="input-row"><label>用户名</label><input type="text" placeholder="请输入用户名" data-event-opts="{{[['input',[['__set_model',['$0','userName','$event',[]],['']]]]]}}" value="{{userName}}" bindinput="__e"/><text data-event-opts="{{[['tap',[['clearUserName',['$event']]]]]}}" class="uni-icon uni-icon-clear" style="{{'display:'+(userName.length>0?'block':'none')+';'}}" bindtap="__e"></text></view><view class="input-row"><label>密码</label><input type="text" placeholder="请输入密码" password="{{isPassword}}" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['']]]]]}}" value="{{password}}" bindinput="__e"/><text data-event-opts="{{[['tap',[['togglePassword',['$event']]]]]}}" class="uni-icon uni-icon-eye" style="{{'color:'+(isPassword?'#666':'black')+';'}}" bindtap="__e"></text></view><view class="btn-row"><button class="loginBtn" type="button" plain="true">登录</button></view></view>